                        HeightRequest="10" WidthRequest="20" Padding="0"
                        HorizontalOptions="EndAndExpand"
                        Margin="0, 0, 25, 0"/>
                <Button Text="▼" BackgroundColor="#1f1f1f" TextColor="#cdcdcd"
                        HeightRequest="10" WidthRequest="20" Padding="0"
                        Margin="0, 0, 35, 0"/>
            </StackLayout>

